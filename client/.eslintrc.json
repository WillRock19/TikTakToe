{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard-with-typescript",
		"prettier",
		"better-styled-components"
	],
	"overrides": [
		{
			"files": ["*.jsx", "*.tsx"],
			"rules": {
				"@typescript-eslint/explicit-function-return-type": ["off"],
				"react/react-in-jsx-scope": "off",
				"react/display-name": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"project": ["tsconfig.json"]
	},
	"plugins": ["react"],
	"rules": {
		"react/react-in-jsx-scope": "off"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}